<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.lambton.bank" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Lambton Bank</name>
    <description>
        App for Lambton Bank : C0724540, Seongyeob Im
    </description>
    <author email="allan@vogle.com" href="http://allan.vogle.com">
        Allan Im
    </author>
    <icon src="resources/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="resources/splash.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
